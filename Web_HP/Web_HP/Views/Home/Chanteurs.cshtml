<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chanteurs</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .chanteur {
            display: inline-block;
            width: calc(33.33% - 20px);
            margin: 10px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .chanteur img {
                width: 100%;
                height: auto;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
            }

            .chanteur h2 {
                padding: 10px;
                margin: 0;
                color: #333;
                font-size: 18px;
                font-weight: bold;
            }

        .chanteur-info {
            padding: 10px;
        }

            .chanteur-info p {
                margin: 5px 0;
                font-size: 14px;
                color: #666;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Chanteurs</h1>
        <div id="chanteurList"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('/api/Chanteur')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    const chanteurList = document.getElementById('chanteurList');
                    data.forEach(chanteur => {
                        const div = document.createElement('div');
                        div.classList.add('chanteur');
                        const img = document.createElement('img');
                        img.src = chanteur.Image;
                        img.alt = chanteur.Nom + ' image';
                        const h2 = document.createElement('h2');
                        h2.textContent = chanteur.Nom;
                        const chanteurInfo = document.createElement('div');
                        chanteurInfo.classList.add('chanteur-info');
                        const nationalite = document.createElement('p');
                        nationalite.textContent = 'Nationalité: ' + chanteur.nationaliteChanteur;
                        chanteurInfo.appendChild(nationalite);
                        div.appendChild(img);
                        div.appendChild(h2);
                        div.appendChild(chanteurInfo);
                        chanteurList.appendChild(div);
                    });
                })
                .catch(error => {
                    console.error('There was a problem with the fetch operation:', error);
                });
        });
    </script>
</body>
</html>
