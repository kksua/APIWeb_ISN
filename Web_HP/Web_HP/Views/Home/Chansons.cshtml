       new APIWeb_ISN.Models.Chanson { IdChanson = 3, NomChanson = "Matilda", Genre = "Ballad", Langue = "anglais", Image = "https://t2.genius.com/unsafe/504x504/https%3A%2F%2Fimages.genius.com%2Fd98059a0f2afd10b04b912355c0e8ceb.1000x1000x1.png", Lien = "https://youtu.be/e6MpCYZlBMk" },
