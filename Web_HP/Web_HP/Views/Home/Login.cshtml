@model Web_HP.ViewModel.UserViewModel

@{
    ViewData["Title"] = "Login";
}

@{
    Layout = "LayoutUser";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <style>
        .custom-container {
            background-color: #2a9d8f; /* Set background color to teal */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 20px auto;
            text-align: center;
        }
        /* Style for the French text */
        .create-account-text {
            color: #fff; /* White text color */
            font-size: 14px; /* Adjust font size */
            margin-bottom: 10px; /* Add some space below the text */
        }

        .create-account-text a {
            color: #fff; /* Set link color to white */
            text-decoration: underline; /* Add underline to links */
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="custom-container">
                    <form method="post">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Adresse mail</span>
                            @Html.TextBoxFor(m => m.Utilisateur.Email, new { @class = "form-control", aria_label = "Sizing example input", aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(m => m.Utilisateur.Email)
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Mot de passe</span>
                            @Html.PasswordFor(m => m.Utilisateur.MDP, new { @class = "form-control", aria_label = "Sizing example input", aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(m => m.Utilisateur.MDP)
                        </div>
                        <input type="submit" value="Se connecter" class="btn btn-info">
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="message"></div>
</body>
</html>


