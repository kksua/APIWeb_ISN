@{
    ViewData["Title"] = "Directeurs";
    var directeurs = new List<APIWeb_ISN.Models.Directeurs>
    {
        new APIWeb_ISN.Models.Directeurs { NomDirecteur = "Christopher Nolan", NationaliteDirecteur = "Britannique", ImageDirecteur = "https://ww4.sinaimg.cn/mw690/74489744ly1hmbmyz2vi7j21871uokgf.jpg" }
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        /* Add your custom styles here */
        .director-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .director-item {
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
        }

        .director-image {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .director-name {
            margin-top: 10px;
            font-weight: bold;
        }

        .director-nationality {
            margin-top: 5px;
            color: #777;
        }

        .back-btn {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <a href="/login/home2" class="btn btn-primary back-btn">Retour à la page d'accueil</a>
        
        <div class="director-grid">
            @foreach (var director in directeurs)
            {
                <div class="director-item">
                    <img src="@director.ImageDirecteur" alt="@director.NomDirecteur" class="director-image">
                    <div class="director-name">@director.NomDirecteur</div>
                    <div class="director-nationality">@director.NationaliteDirecteur</div>
                </div>
            }
        </div>
    </div>
</body>
</html>
