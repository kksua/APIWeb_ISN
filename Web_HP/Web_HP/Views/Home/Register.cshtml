
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "LayoutUser";
}
<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <style>
        .custom-container {
            background-color: #2a9d8f; /* Set background color to teal */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 20px auto;
            text-align: center;
        }
        /* Style for the French text */
        .create-account-text {
            color: #fff; /* White text color */
            font-size: 14px; /* Adjust font size */
            margin-bottom: 10px; /* Add some space below the text */
        }

            .create-account-text a {
                color: #fff; /* Set link color to white */
                text-decoration: underline; /* Add underline to links */
            }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="custom-container">
                    <form action="/action_page.php">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Nom utilisateur</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Adresse mail</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-default">Mot de passe</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                        </div>
                        <div class="create-account-text">
                            Si vous avez déjà un compte, <a href="Login">cliquer ici</a>.
                        </div>
                        <button type="submit" class="btn btn-info">Valider</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="message"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault();

                var formData = {
                    username: $('#username').val(),
                    password: $('#password').val()
                };

                $.ajax({
                    type: 'POST',
                    url: '/api/login', // API endpoint
                    data: JSON.stringify(formData),
                    contentType: 'application/json',
                    success: function (data) {
                        // Login successful
                        $('#message').text('Login successful. Welcome, ' + data.Username);
                        // Redirect or do something else after successful login
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        // Login failed
                        $('#message').text('Login failed: ' + xhr.responseJSON.Message);
                    }
                });
            });
        });
    </script>
</body>
</html>