@{
    ViewData["Title"] = "Albums";
    var albums = new List<APIWeb_ISN.Models.Album>
    {
        new APIWeb_ISN.Models.Album { IdAlbum = 1, NomAlbum = "WHITE NIGHT", Image = "https://images.app.goo.gl/b9mmb5RELd9yEGno6" },
        new APIWeb_ISN.Models.Album { IdAlbum = 2, NomAlbum = "SEVENTEEN 11th Mini Album 'SEVENTEENTH HEAVEN'", Image = "https://i.scdn.co/image/ab67616d0000b273d07a54abba4f5060c2486e3c" }
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        /* Add your custom styles here */
        .album-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .album-item {
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
        }

         .acteur-image {
            max-width: 100%; /* 保持图像宽度自适应容器 */
            height: auto; /* 自动调整图像高度 */
            border-radius: 5px;
        }

        .album-image {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .album-name {
            margin-top: 10px;
            font-weight: bold;
        }

        .back-btn {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <a href="/login/home2" class="btn btn-primary back-btn">Retour à la page d'accueil</a>
        
        <div class="album-grid">
            @foreach (var album in albums)
            {
                <div class="album-item">
                    <img src="@album.Image" alt="@album.NomAlbum" class="album-image">
                    <div class="album-name">@album.NomAlbum</div>
                </div>
            }
        </div>
    </div>
</body>
</html>
