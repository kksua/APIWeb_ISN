@{
    ViewData["Title"] = "Acteurs";
    var acteurs = new List<APIWeb_ISN.Models.Acteur>
    {
        new APIWeb_ISN.Models.Acteur { NomActeur = "Anne Hathaway", NationaliteActeur = "Etats-Unis", ImageActeur = "https://img1.baidu.com/it/u=3886090859,1439740581&fm=253&fmt=auto&app=138&f=JPEG?w=440&h=553" }
    };
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        /* Ajoutez vos styles personnalisés ici */
        .acteur-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .acteur-item {
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
        }
        
        .acteur-image {
            max-width: 100%; /* 保持图像宽度自适应容器 */
            height: auto; /* 自动调整图像高度 */
            border-radius: 5px;
        }

        .acteur-name {
            margin-top: 10px;
            font-weight: bold;
        }

        .acteur-nationality {
            margin-top: 10px;
        }

        .back-btn {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <a href="/login/home2" class="btn btn-primary back-btn">Retour à la page d'accueil</a>
        
        <div class="acteur-grid">
            @foreach (var acteur in acteurs)
            {
                <div class="acteur-item">
                    <img src="@acteur.ImageActeur" alt="@acteur.NomActeur" class="acteur-image">
                    <div class="acteur-name">@acteur.NomActeur</div>
                    <div class="acteur-nationality">@acteur.NationaliteActeur</div>
                </div>
            }
        </div>
    </div>
</body>
</html>
