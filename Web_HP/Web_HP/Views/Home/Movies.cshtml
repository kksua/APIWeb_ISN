<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        /* Add your custom styles here */
        .film-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .film-item {
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
        }
         .acteur-image {
            max-width: 100%; /* 保持图像宽度自适应容器 */
            height: auto; /* 自动调整图像高度 */
            border-radius: 5px;
        }


        .film-image {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
        }

        .film-name {
            margin-top: 10px;
            font-weight: bold;
        }

        .film-description {
            margin-top: 10px;
        }

        .back-btn {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <a href="/login/home2" class="btn btn-primary back-btn">Retour à la page d'accueil</a>
        
        <div class="film-grid">
            @foreach (var film in films)
            {
                <div class="film-item">
                    <img src="@film.image" alt="@film.NomFilm" class="film-image">
                    <div class="film-name">@film.NomFilm</div>
                    <div class="film-duration">@film.Duree</div>
                    <div class="film-description">@film.description</div>
                </div>
            }
        </div>
    </div>
</body>
</html>
