    ViewData["Title"] = "Films";
     var films = new List<APIWeb_ISN.Models.Movies>
    {
        new APIWeb_ISN.Models.Movies { IdFilm = 1, NomFilm = "Interstellar", Duree = TimeSpan.FromHours(2).Add(TimeSpan.FromMinutes(49)), image = "https://s3.amazonaws.com/nightjarprod/content/uploads/sites/130/2021/08/19085635/gEU2QniE6E77NI6lCU6MxlNBvIx-scaled.jpg", description = "Set in a dystopian future where humanity is embroiled in a catastrophic blight and famine, the film follows a group of astronauts who travel through a wormhole near Saturn in search of a new home for humankind." },
        new APIWeb_ISN.Models.Movies { IdFilm = 2, NomFilm = "The Boys in the Boat", Duree = TimeSpan.FromHours(2).Add(TimeSpan.FromMinutes(4)), image = "https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcTPu0jDbb5ltteOnDNLpfnBC6kFGR1Jj4D8YZp-GKlMHsI4mBcn", description = "Au plus fort de la Grande Dépression, les membres de l'équipe d'aviron de l'Université de Washington sont mis sous les projecteurs alors qu'ils concourent pour l'or aux Jeux olympiques de 1936 à Berlin." },
        new APIWeb_ISN.Models.Movies { IdFilm = 3, NomFilm = "Top Gun: Maverick", Duree = TimeSpan.FromHours(2).Add(TimeSpan.FromMinutes(11)), image = "https://encrypted-tbn2.gstatic.com/images?q=tbn:ANd9GcTb0I81g39NGDx0sKP5F_DECCsdzoOwh9MVUD0PLSVvQpf3rpIM", description = "Trente années de service amènent Maverick à former un groupe de diplômés d'élite de TOPGUN pour se préparer à une mission de grande envergure pendant que Maverick combat ses démons du passé." }
    };
