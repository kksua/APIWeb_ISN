<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Series</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .series {
            display: inline-block;
            width: calc(33.33% - 20px);
            margin: 10px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .series img {
                width: 100%;
                height: auto;
                border-top-left-radius: 5px;
                border-top-right-radius: 5px;
            }

            .series h2 {
                padding: 10px;
                margin: 0;
                color: #333;
                font-size: 18px;
                font-weight: bold;
            }

        .series-info {
            padding: 10px;
        }

            .series-info p {
                margin: 5px 0;
                font-size: 14px;
                color: #666;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Series</h1>
        <div id="seriesList"></div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            fetch('/api/Series')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    const seriesList = document.getElementById('seriesList');
                    data.forEach(serie => {
                        const div = document.createElement('div');
                        div.classList.add('series');
                        const img = document.createElement('img');
                        img.src = serie.image;
                        img.alt = serie.NomSerie + ' image';
                        const h2 = document.createElement('h2');
                        h2.textContent = serie.NomSerie;
                        const seriesInfo = document.createElement('div');
                        seriesInfo.classList.add('series-info');
                        const seasons = document.createElement('p');
                        seasons.textContent = 'Saisons: ' + serie.NmbreSeasons;
                        const episodes = document.createElement('p');
                        episodes.textContent = 'Episodes: ' + serie.NmbreEpisode;
                        seriesInfo.appendChild(seasons);
                        seriesInfo.appendChild(episodes);
                        div.appendChild(img);
                        div.appendChild(h2);
                        div.appendChild(seriesInfo);
                        seriesList.appendChild(div);
                    });
                })
                .catch(error => {
                    console.error('There was a problem with the fetch operation:', error);
                });
        });
    </script>
</body>
</html>
