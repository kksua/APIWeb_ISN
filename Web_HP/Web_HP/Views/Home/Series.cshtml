@{
    ViewData["Title"] = "Séries";
    var series = new List<APIWeb_ISN.Models.Series>
    {
        new APIWeb_ISN.Models.Series { NomSerie = "Nirvana in Fire", NmbreSeasons = 2, NmbreEpisode = 54 }
    };
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        /* Ajoutez vos styles personnalisés ici */
        .serie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .serie-item {
            text-align: center;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
        }

        .serie-name {
            margin-top: 10px;
            font-weight: bold;
        }

        .serie-details {
            margin-top: 10px;
        }

        .back-btn {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <a href="/login/home2" class="btn btn-primary back-btn">Retour à la page d'accueil</a>
        
        <div class="serie-grid">
            @foreach (var serie in series)
            {
                <div class="serie-item">
                    <div class="serie-name">@serie.NomSerie</div>
                    <div class="serie-details">
                        <p>Saisons: @serie.NmbreSeasons</p>
                        <p>Épisodes: @serie.NmbreEpisode</p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
